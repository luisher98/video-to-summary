{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "sourceMap": true
    },
    "include": ["src/**/*", "src/.infrastructure"],
    "exclude": ["node_modules", "dist"]
}
