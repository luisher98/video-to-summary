# API Keys
OPENAI_API_KEY=your_openai_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER=your_container_name

# Server Configuration
PORT=5050
NODE_ENV=development
HOST=localhost
CORS_ORIGIN=*

# File Processing
MAX_FILE_SIZE=500000000  # 500MB in bytes
MEMORY_LIMIT=200000000   # 200MB in bytes
CHUNK_SIZE=50000000      # 50MB chunk size for uploads

# Temporary Directories
TEMP_DIR=./tmp
UPLOAD_DIR=./tmp/uploads
AUDIO_DIR=./tmp/audios
TRANSCRIPT_DIR=./tmp/transcripts

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX=10        # Maximum requests per window

# Security
TRUST_PROXY=true         # Set to true if behind a reverse proxy

# Logging
LOG_LEVEL=info          # debug, info, warn, error
ENABLE_REQUEST_LOGGING=true 